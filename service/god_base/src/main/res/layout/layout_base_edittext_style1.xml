<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:clickable="true"
    android:background="@drawable/selector_base_click_bg"
    android:layout_height="@dimen/qb_px_50">


    <EditText
        android:id="@+id/tv_right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:hint="请输入"
        android:gravity="right"
        android:background="@null"
        android:textSize="@dimen/qb_px_14"
        android:layout_marginRight="@dimen/qb_px_20"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        style="@style/base_text_style1"
        android:layout_height="@dimen/qb_px_48"
        android:layout_marginLeft="@dimen/qb_px_20"
        android:gravity="center_vertical"
        android:text="title"

        app:layout_constraintEnd_toStartOf="@id/tv_right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/v_line"
        android:layout_width="0dp"
        android:layout_height="@dimen/qb_px_1"
        android:background="@color/base_gray2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@id/tv_title" />

</androidx.constraintlayout.widget.ConstraintLayout>