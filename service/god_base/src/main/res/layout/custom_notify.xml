<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/base_white_bg"
    android:padding="@dimen/qb_px_2"
    >

    <ImageView
        android:id="@+id/iv_custom_notify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:src="@drawable/icon_left_arrow" />

    <TextView
        android:id="@+id/tv_custom_notify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_custom_notify"
        android:text="正在下载"
        android:layout_marginRight="@dimen/qb_px_5"
        android:textColor="@color/base_black" />
    <TextView
        android:id="@+id/tv_custom_notify_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_custom_notify"
        android:text="1000"
        android:textColor="@color/base_gray_bg"
        />
    <ProgressBar
        android:id="@+id/pb_custom_notify"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_below="@+id/tv_custom_notify"
        android:layout_marginTop="@dimen/qb_px_2"
        android:layout_toRightOf="@+id/iv_custom_notify"

        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_custom_notify_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qb_px_2"
        android:layout_below="@+id/tv_custom_notify"
        android:layout_toRightOf="@+id/iv_custom_notify"

        android:textColor="@color/base_black"
        android:visibility="gone"
        android:text="@string/app_name"/>

</RelativeLayout>